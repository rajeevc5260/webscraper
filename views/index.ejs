<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WEBSCRAPER</title>
  </head>
  <body>
    <!-- Inline css -->
    <style>
      body {
        background-color: #0d1117;
        font-family: "Poppins", sans-serif;
      }
      form {
        display: grid;
        justify-content: center;
        margin-top: 5rem;
      }
      form h1 {
        text-align: center;
        color: rgb(255, 255, 255);
      }
      form input {
        border-radius: 5px;
        border: none;
        margin-bottom: 20px;
        font-size: 18px;
      }
      .urlbox {
        width: 20rem;
        height: 2rem;
        padding: 10px;
      }
      .button {
        background-color: rgb(0, 0, 0);
        color: white;
        padding: 10px;
        cursor: pointer;
        transition: ease-in-out 250ms;
      }
      .button:hover {
        background-color: rgb(38, 10, 70);
      }
      .container p {
        font-size: 30px;
      }
      .tableContent {
        margin-top: 3rem;

      }
      table,
      th,
      td {
        color: rgb(211, 210, 210);
        border: 2px solid rgb(153, 153, 153);
        padding: 10px;
        vertical-align: top;
      }
      td p {
        width: 500px;
        overflow: hidden;
        

      }
      button{
        border:none;
        padding-left: 20px;
        margin-bottom: 15px;
      }
    </style>
    <!-- Inline css Ends here -->

    <!-- Input Url Form -->
    <form action="send-url" method="POST">
      <h1>Webpage Scraper</h1>
      <input
        type="text"
        class="urlbox"
        placeholder="Enter Website URL"
        name="myurl"
      />
      <input type="submit" class="button" value="Get Insight" />
    </form>

    <div class="tableContent">
        <button class="button" onclick="window.location='/'">Reload</button>
      <table>
        <tr>
          <th>Domain Name</th>
          <th>WordCount</th>
          <th>favourite</th>
          <th>Web-Links</th>
          <th>Media-Links</th>
          <th>Actions</th>

        <% webDataList.forEach(webData =>{ %>   
        </tr>
        <td><%= webData.url %></td>
        <td><%= webData.wordCount %></td>
        <td><%= webData.favourite %></td>
        <td><p><%= webData.weblinks %></p></td>
        <td><p><%= webData.medialinks %></p></td>
        <td><Button class="button remove">Remove</Button> <br> <Button class="button">Add to Fav</Button></td>
        <tr>
        <%})%>

      </table>
    </div>

  </body>
</html>
